<div class="content-headline">
  <header class="f_hecto">
    <%=content_headline_image(content)%>
    <a href="<%=gmurl(content)%>"><%=content.name%></a>
  </header>
  <div class="authorship secondary f_milli">
    por <strong><%=user_link(content.user)%></strong>
    &mdash;
    <span class="timestamp"><%=print_tstamp(content.created_on)%></span> -
    <%=content_tags(content)%>
    &mdash;
    <%=comment_count(content)%>
  </div>
  <% if content.respond_to?(:description) && content.description.to_s != ""%>
    <%=initial_sentences(content.description)%>
  <% elsif content.respond_to?(:main) && content.main.to_s != ""%>
    <%=initial_sentences(content.main)%>
  <% end -%>
</div>
