<div class="grid-5">
<%mftext('Noticias', :has_submodules => true) do %>
		<%=mfcontents_basic("Generales",
					Proc.new { News.published.in_term(@gaming_platform).find(:all, :order => 'created_on desc', :limit => 10) },
					[],
					:faction_favicon => true, :blast => true)%>
<% end -%>
</div>

<%mftext('En los foros', :has_submodules => true, :grid => 10, :glast => true) do %>

	<%=mfcontents_basic("Tópics activos",
					Proc.new { Topic.published.in_term_tree(@gaming_platform).find(:all, :conditions => 'closed is false', :order => 'updated_on desc', :limit => 10) },
					[],
					:faction_favicon => true, :grid => 6)%>

	<%mftext('Foros activos', :grid => 4, :glast => true, :blast => true) do %>
	<%= render :partial => '/home/foros_list', :locals => { :topterm => controller.portal.categories(Topic)[0] } %>
	<% end -%>

<% end -%>

<div class="grid-12">

<% mflist("Imágenes", Proc.new { Image.published.in_term_tree(@gaming_platform).find(:all, :order => 'created_on desc', :limit => 4) }, :class_container => 'mflist-row-images', :grid => 6, :glast => true ) do |im| %>
		<%=link_to fc_thumbnail(im.file, 'i', Cms::IMG_SIZE_GRID2, false), gmurl(im)%>
	<% end %><%# mflist-%>

<div class="clearb"></div>

<%mftext('Artículos', :has_submodules => true, :grid => 12, :glast => true) do
	revs = Review.count > 0
	classes = %w(Column Interview Tutorial Review)
	if revs
		classes = classes - ['Review']
		grid_size = 4
		thumb_width = '198'
	else
		grid_size = 3
		thumb_width = '143'
	end

%>
<% classes.each do |it| %>
<% dafirst = true
mfcontents_list(Cms::translate_content_name(it),
					Proc.new { Object.const_get(it).published.in_term(@gaming_platform).find(:all, :order => 'created_on desc', :limit => 3) },
					:grid => grid_size, :glast => (it == classes.last)) do |o| %>

<%=content_category(o)%><a href="<%=gmurl(o)%>"><%=o.title%></a>
<% if dafirst && o.home_image then %><div style="margin: 5px 0 10px 0;"><a href="<%=gmurl(o)%>"><%=fc_thumbnail(o.home_image, 'i', "#{thumb_width}x54", false)%></a></div><% end -%>
<%	dafirst = false
	end -%>
<% end -%>
<% end -%>


<div class="clearl"></div>


<%mftext('Descargas', :has_submodules => true, :grid => 8) do
category = controller.portal.categories(Download)[0]
%>
	<div class="grid-4">
	<%=mfcontents_basic('Últimas',
								      Proc.new { Download.published.in_term_tree(@gaming_platform).find(:all, :order => 'created_on DESC', :limit => 12) },
					[],
					:faction_favicon => true)%>
	</div>

	<div class="grid-4 glast">
	<%=mfcontents_basic('Esenciales',
					Proc.new { Download.published.in_term_tree(@gaming_platform).find(:all, :conditions => "essential is true", :order => 'created_on DESC', :limit => 12) },
					[],
					:faction_favicon => true)%>
	</div>
<% end -%>


<%=render :partial => '/home/poll' %>
</div>

<div class="grid-3 glast">
<%=render :partial => '/home/faction_stats' %>

<%mftext('Destacados') do %>
<%= render :partial => '/home/outstanding_entity', :locals => { :outstanding_entity_cls => OutstandingUser } %>
<%= render :partial => '/home/outstanding_entity', :locals => { :outstanding_entity_cls => OutstandingClan } %>
<% end -%>

<%=render :partial => '/home/questions' %>

<%mftext('Imagen del día') do %>
<% d = Date.today
cache("/home/index/potd20085_#{d.strftime('%Y%m%d')}") do

@daily_img = Potd.current
@daily_img = @daily_img.image if @daily_img

if @daily_img then %>
   	<%=render :partial => '/imagenes/image_thumbnail', :locals => {:image => @daily_img, :size => Cms::IMG_SIZE_GRID3}%>
    <div class="more"><a href="/imagenes/potds">Ver anteriores..</a></div>
<% end -%>
<% end
-%>
<% end -%>

<%=render :partial => '/home/eventos2' %>
</div>
